= link_to t('.l_show_menu'),  "#", class: "showMore"
%div.menu
  <hr>
  %b
    = t '.t_first_courses'
  %ol
    - day.first_courses.each do |first_course|
      = render first_course
      - if day.starts_at.strftime("%d") == Time.now.strftime("%d")
        = button_to t('.b_choose_first'), first_items_path(first_course_id: first_course), remote: true, class: "btn btn-warning", id: "b_add_to_cart"
  %b
    = t '.t_second_courses'
  %ol
    - day.second_courses.each do |second_course|
      = render second_course
      - if day.starts_at.strftime("%d") == Time.now.strftime("%d")
        = button_to t('.b_choose_second'), second_items_path(second_course_id: second_course), remote: true, class: "btn btn-warning", id: "b_add_to_cart"
  %b
    = t '.t_drink_courses'
  %ol
    - day.drinks.each do |drink|
      = render drink
      - if day.starts_at.strftime("%d") == Time.now.strftime("%d")
        = button_to t('.b_choose_drink'), drink_items_path(drink_id: drink), remote: true, class: "btn btn-warning", id: "b_add_to_cart"
