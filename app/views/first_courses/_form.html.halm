= form_for(@day) do |f|
  - if @day.errors.any?
    #error_explanation
      %h2
        = pluralize(@day.errors.count, "error")
        prohibited this day from being saved:
      %ul
        - @day.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :starts_at
    %br/
    = f.datetime_select :starts_at
  .actions
    = f.submit